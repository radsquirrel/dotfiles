[advice]
	skippedCherryPicks = false
[alias]
	br = branch
	ci = commit
	co = checkout
	ctags = !.git/hooks/ctags
	cscope = !.git/hooks/cscope
	l1 = log --decorate --oneline --graph
	last = log -1
	mr = "!f() { git fetch --force \"$1\" \"merge-requests/$2/head:merge-request-$2\" && git checkout \"merge-request-$2\"; }; f"
	rbc = rebase --continue
	rbi = rebase --interactive
	rma = remote add
	rmr = remote remove
	rmv = remote -v
	st = status
[diff]
	tool = vimdiff
[gerrit]
	createChangeId = false
[help]
	autocorrect = -1
[include]
	path = local
[init]
	templatedir = ~/.config/git/templates
	defaultBranch = main
[fetch]
	prune = true
[merge]
	tool = vimdiff4
[mergetool "vimdiff4"]
	cmd = $EDITOR -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[rebase]
	autosquash = true
